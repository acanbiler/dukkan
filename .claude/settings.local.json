{
  "permissions": {
    "allow": [
      "WebFetch(domain:www.oracle.com)",
      "WebSearch",
      "WebFetch(domain:martinfowler.com)",
      "WebFetch(domain:www.baeldung.com)",
      "Bash(find:*)",
      "Bash(tree:*)",
      "WebFetch(domain:code.claude.com)",
      "Bash(mvn test:*)",
      "Bash(java:*)",
      "Bash(mkdir:*)",
      "Skill(backend-dev-guidelines)",
      "Skill(frontend-dev-guidelines)",
      "Bash(npm install:*)",
      "Bash(npm test:*)",
      "Bash(npm run test:coverage:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(mvn clean:*)",
      "Bash(chmod:*)",
      "Bash(cat:*)",
      "Bash(git rm:*)",
      "Skill(superpowers:executing-plans)",
      "Bash(xargs:*)",
      "Bash(done)",
      "Bash(for service in product-service user-service order-service payment-service email-service api-gateway)",
      "Bash(do echo \"=== $service Dockerfile ===\")",
      "Bash(if [ -f \"backend/$service/Dockerfile\" ])",
      "Bash(then echo \"✓ EXISTS\")",
      "Bash(else echo \"✗ MISSING\")",
      "Bash(fi)",
      "Bash(if [ -f \"frontend/Dockerfile\" ])",
      "Bash(then echo \"✓ Frontend Dockerfile EXISTS\")",
      "Bash(else echo \"✗ Frontend Dockerfile MISSING\")",
      "Bash(test:*)",
      "Bash(docker compose:*)",
      "Bash(grep:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/skill-activation-prompt.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/post-tool-use-tracker.sh"
          }
        ]
      }
    ]
  }
}
